<view class="container">
    <view class="search">
        <view class="scan">
            <image mode="widthFix" src="../../../img/logistics/logistics.png"></image>
        </view>
        <view class="input">
            <textarea 
                value="{{inputCode}}"
                placeholder="请扫描货物条形码查询商品"
                focus="{{true}}" 
                bindinput="currentInput" 
                bindblur="currentBlur" 
                bindfocus="currentFocus" 
                bindconfirm="currentConfirm"
                confirm-type="search"
                cols="30"
                rows="2"
            ></textarea>
        </view>
        <view class="image">
            <image mode="widthFix" src="../../../img/logistics/search.png"></image>
        </view>
    </view>
    <view class="context">
        <scroll-view
            class="scroll-view"
            scroll-y
        >
            <view class="scroll-list">
                <view class="scroll-item" wx:if="{{searchItem}}">
                    <view class="item-header">药品名称：{{searchItem.name}}</view>
                    <view class="item-pid">药品编号：{{searchItem.id}}</view>
                    <view class="item-pid">药品厂家：{{searchItem.address}}</view>
                    <view class="item-pid">药品规格：{{searchItem.dose}}</view>
                    <view class="item-pid">生产日期：{{searchItem.createTime}}</view>
                    <view class="item-pid">有效期：{{searchItem.removeTime}}</view>
                    <view class="item-count">
                        <view>库存数量：{{searchItem.count}}</view>
                        <view>价格：{{searchItem.price}}</view>
                        <view class="cicle-left"></view>
                        <view class="cicle-right"></view>
                    </view>
                </view>
            </view>
        </scroll-view>
    </view>
</view>