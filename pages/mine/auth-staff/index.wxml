<view class="container">
    <view class="content">
        <view class="content-card">
            <view class="order">
                <view class="order-id">
                    <input 
                        placeholder="登录名" 
                        placeholder-class="order-placeholder" 
                        bindinput="bindChangeName"
                        value="{{name}}" 
                        type="text"
                    />
                </view>
            </view>
            <view class="order">
                <view class="order-id">
                    <input 
                        placeholder="登录密码" 
                        placeholder-class="order-placeholder" 
                        bindinput="bindChangePass"
                        value="{{password}}" 
                        type="text"
                    />
                </view>
            </view>
        </view>
        <view class="submit" catchtap="naviBack">提交</view>
    </view>
</view>
