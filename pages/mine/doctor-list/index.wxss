.eval-container {
    background-color: #f2f2f2;
    overflow: hidden;
    height: 100vh;
}
.eval-list {
    display: flex;
    height: 100vh;
}
.eval-item {
    margin: 30rpx;
    background-color: #ffffff;
    display: flex;
    flex-direction: column;
    border-radius: 12rpx;
    padding: 30rpx 30rpx 15rpx;
    box-sizing: border-box;
}
.main-detail {
    display: flex;
    justify-content: flex-end;
    border-top: 1rpx solid #f2f2f2;
    padding-top: 15rpx;
    align-items: center;
    height: 45rpx;
    font-size: 28rpx;
}
.main-detail image {
    width: 40rpx;
    height: 40rpx;
}
.main-content {
    padding: 0 0 20rpx 0;
}
.main-label {
    display: flex;
    font-size: 30rpx;
    padding: 10rpx 0;
}
.main-label view {
     color: #888888;
     padding-right: 30rpx;
}