/* pages/mine/index.wxss */
.container-view {
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
    overflow-y: scroll;
}
.active {
    background-image: linear-gradient(#8469FF, #6266fff0);
    color: #ffffff;
    padding: 0 30rpx;
    box-sizing: border-box;
    display: flex;
    justify-content: center;
    align-items: center;
}
.header {
    background-image: linear-gradient(#6266FF, #4562FF);
    /* height: 210rpx; */
    width: 102%;
    align-items: center;
    display: flex;
    /* padding-bottom: 75rpx; */
    box-sizing: border-box;
    justify-content: center;
    font-size: 28rpx;
    color: #ffffff;
    border-bottom-left-radius: 86%;
    border-bottom-right-radius: 86%;
    align-self: center;
    position: relative;
}

.list {
    padding: 0 30rpx;
}
.item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 30rpx 0;
}
.list .item:not(:first-child){
    border-top: 1rpx solid #f2f2f2;
}
.item-start {
    display: flex;
    align-items: center;
}
.item-image { 
    width: 40rpx;
    height: 40rpx;
    margin-right: 15rpx;
}
.item-start text {
    white-space: nowrap;
    font-size: 34rpx;
    font-weight: bold;
}
.end-btn {
    width: 35rpx;
    height: 35rpx;
}
.border-bottom {
    border-bottom: 20rpx solid #f2f2f2;
}

.avatar-view {
    z-index: 50;
    padding: 70rpx 0 0;
    height: 450rpx;
    display: flex;
    align-items: flex-start;
    justify-content: center;
    box-sizing: border-box;
    /* background-image: linear-gradient(#ffffff, #5898b1cf);#5964ffb3 */
    background-image: linear-gradient(#ffffff, #5964ffb3);
    /* border-bottom-right-radius: 19%; */
    /* border-bottom-left-radius: 19%; */
    box-shadow: 0rpx 14rpx 14rpx 13rpx #dedede;
}
.avatar {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
.avatar-wrapper {
  background: rgba(255,255,255,0)!important;
  border: 0 !important;
}
.avatar input {
  text-align: center;
  color: #ffffff;
  font-weight: bold;
}
.pla-class {
  color: #ffffff
}
button::after{
  border: 0 !important;
}
.avatar-image {
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
}
.avatar-name {
    font-size: 44rpx;
    color: #ffffff;
    font-weight: bold;
    margin: 30rpx 0 0;
}
.weui-input {
  caret-color:transparent
}
.avatar-text {
    font-weight: bold;
    font-size: 48rpx;
    color: #ffffff;
}

.alone {
    border-radius: 20rpx;
    margin: 50rpx 30rpx;
    box-shadow: 0rpx 11rpx 15rpx 0rpx #dedede;
    margin-top: -84rpx;
    z-index: 800;
    background: #ffffff;
}