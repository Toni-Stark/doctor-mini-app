    <view wx:for="{{dataList}}" class="order-item shadow-view" bindtap="naviToDetail">
        <view class="main-time border-b">
            <view class="platform">{{item.companyName}}</view>
            <view class="platform-order">
                订单号: 
                <view class="platform-text"> {{item.orderId}}</view>
            </view>
        </view>
        <view class="main-title border-b">
            <view class="main-label">
                支付时间： 
                <view class="main-text">{{item.payTime}}</view> 
            </view>
            <view class="main-label">
                订单金额： 
                <view class="main-text">{{item.price}}</view> 
            </view>
            <view class="main-label">
                核验人： 
                <view class="main-text">{{item.people}}</view> 
            </view>
        </view>
        <view class="main-title border-b" wx:for="{{item.shopList}}" wx:for-item="shopItem">
            <view class="main-label">
                名称： 
                <view class="main-text">{{shopItem.name}}</view> 
            </view>
            <view class="main-view">
                <view class="main-label">
                    数量： 
                    <view class="main-text">{{shopItem.count}}</view> 
                </view>
                <view class="main-label">
                    价格： 
                    <view class="main-text">{{shopItem.unitPrice}}</view> 
                </view>
            </view>
        </view>
    </view>
    <view class="fixex">
        <view class="fixex-box" bindtap="naviToPrice">
            <view>
                <image mode="widthFix" src="../../../img/index/evaluate-eval.png"></image>
                评价
            </view>
        </view>
        <view class="fixex-box" bindtap="naviToService">
            <view>医师咨询</view>
        </view>
    </view>
</view>
