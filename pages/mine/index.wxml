<view class="container-view">
    <view class="avatar-view">
        <view class="avatar">
            <image 
                class="avatar-image" 
                mode="aspectFill" 
                src="{{avatarUrl || '../../img/app-logo/0.png'}}"
            ></image>
            <text class="avatar-text">{{nickName||'请登录'}}</text>
        </view>
    </view>
    <view class="list alone">
        <view class="item" catchtap="naviToOrderList">
            <view class="item-start">
                <image class="item-image" mode="widthFix" src="../../img/mine/user-icon-mine.png"></image>
                <text>订单列表</text>
            </view>
            <image class="end-btn" mode="widthFix" src="../../img/mine/grey-r-arrow.png"></image>
        </view>
        <view class="item" catchtap="naviToEvaluateList">
            <view class="item-start">
                <image class="item-image" mode="widthFix" src="../../img/mine/user-icon-zzzz.png"></image>
                <text>我的评价</text>
            </view>
            <image class="end-btn" mode="widthFix" src="../../img/mine/grey-r-arrow.png"></image>
        </view>
        <view class="item" catchtap="naviToResult">
            <view class="item-start">
                <image class="item-image" mode="widthFix" src="../../img/mine/order.png"></image>
                <text>订单录入</text>
            </view>
            <image class="end-btn" mode="widthFix" src="../../img/mine/grey-r-arrow.png"></image>
        </view>
    </view>
</view>
<view class="bottom-banner"></view>
<tabView activeIdx="{{2}}" userScan="{{userScan}}"></tabView>




