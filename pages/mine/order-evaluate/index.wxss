/* pages/mine/order-evaluate/index.wxss */
.container {
    height: 100vh;
    background-color: #fcfbfb;
}
.form { 
   padding: 35rpx 55rpx;
    background: #ffffff;
    border-top: 1rpx solid #f2f2f2;
    flex: 1;
}

.van-uploader__upload {
    border: 1rpx solid #dedede;
}

.label {
    display: flex;
    align-items: center;
    padding: 14rpx 0;
    width: 100%;
}
.label-title {
  font-size: 32rpx;
  font-weight: bold;
}
.label-desc {
  font-weight: bold;
  font-size: 32rpx;
}
.label-active {
    align-items: flex-start;
}
.label text {
    font-size: 30rpx;
    margin-right: 50rpx;
    white-space: nowrap;
    padding: 10rpx 0;
    text-align: right;
    width: 115rpx;
}
.textarea {
    width: 100%;
    margin: 15rpx 0;
    font-size: 32rpx;
    border-bottom: 1rpx solid #f2f2f2;
}

.btn {
    height: 50rpx;
    width: 80%;
    padding: 20rpx;
    border-radius: 10rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    /* background-image: linear-gradient(90deg,#EEF2FF, #EEE1FF);
    color: #1e5477; */
    background-image: linear-gradient(#6266FF, #4562FF);
    color: #ffffff;
    font-weight: bold;
    font-size: 36rpx;
}
.box {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 50rpx 0;
}
.label-view {
    display: flex;
    width: 100%;
    flex-wrap: wrap;
}
.label-view view {
    white-space: nowrap;
    padding: 6rpx 15rpx;
    margin: 6rpx 15rpx;
    border-radius: 50rpx;
    font-size: 28rpx;
    border: 1rpx solid #d2cfcf;
}
.label-view .active {
    border: 1rpx solid #1a9fec;
    color: #1a9fec;
}
.van-rate__icon {
    display: flex !important;
}