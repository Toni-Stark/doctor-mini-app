/* pages/mine/order-evaluate/index.wxss */
.container {
    height: 100vh;
    background-color: #fcfbfb;
}
.form {
    padding: 55rpx;
    background: #ffffff;
    border-top: 1rpx solid #e4e4e4;
}

.van-uploader__upload {
    border: 1rpx solid #dedede;
}

.label {
    display: flex;
    align-items: center;
    padding: 14rpx 0;
}
.label text {
    font-size: 30rpx;
    margin-right: 50rpx;
}
.textarea {
    width: 100%;
    margin: 15rpx 0;
}

.btn {
    height: 50rpx;
    width: 80%;
    padding: 20rpx;
    border-radius: 50rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    background-image: linear-gradient(90deg,#EEF2FF, #EEE1FF);
    color: #1e5477;
    font-weight: bold;
}
.box {
    width: 100%;
    margin-top: 40rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}