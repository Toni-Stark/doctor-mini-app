/* pages/mine/order-evaluate/index.wxss */
.container {
    height: 100vh;
    background-color: #fcfbfb;
}
.form {
    padding: 55rpx;
    background: #ffffff;
    border-top: 1rpx solid #e4e4e4;
}

.van-uploader__upload {
    border: 1rpx solid #dedede;
}

.label {
    display: flex;
    align-items: center;
    padding: 14rpx 0;
    width: 100%;
}
.label-active {
    align-items: flex-start;
}
.label text {
    font-size: 30rpx;
    margin-right: 50rpx;
    white-space: nowrap;
    padding: 10rpx 0;
}
.textarea {
    width: 100%;
    margin: 15rpx 0;
}

.btn {
    height: 50rpx;
    width: 80%;
    padding: 20rpx;
    border-radius: 50rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    background-image: linear-gradient(90deg,#EEF2FF, #EEE1FF);
    color: #1e5477;
    font-weight: bold;
}
.box {
    width: 100%;
    margin-top: 40rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}
.label-view {
    display: flex;
    width: 100%;
    flex-wrap: wrap;
}
.label-view view {
    white-space: nowrap;
    padding: 6rpx 15rpx;
    margin: 6rpx 15rpx;
    border-radius: 50rpx;
    font-size: 28rpx;
    border: 1rpx solid #d2cfcf;
}
.label-view .active {
    border: 1rpx solid #1a9fec;
    color: #1a9fec;
}
.van-rate__icon {
    display: flex !important;
}