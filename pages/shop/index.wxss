/* pages/shop/index.wxss */
.container {
    height: 100vh;
}
.active {
    background-image: linear-gradient(#8469FF, #6266FF);
    color: #ffffff;
    padding: 0 30rpx;
    box-sizing: border-box;
    display: flex;
    justify-content: center;
    align-items: flex-end;
}
.header {
    background-image: linear-gradient(#6266FF, #4562FF);
    height: 163rpx;
    width: 119%;
    align-items: center;
    display: flex;
    padding-bottom: 75rpx;
    box-sizing: border-box;
    justify-content: center;
    font-size: 28rpx;
    color: #ffffff;
    border-bottom-left-radius: 86%;
    border-bottom-right-radius: 86%;
    align-self: center;
    position: relative;
}
.content {
    width: 100%;
    display: flex;
    flex-direction: column;
    flex: 1;
    margin-top: -167rpx;
    z-index: 990;
}

.tab-bar {
    padding: 0 15rpx;
    display: flex;
    flex-direction: row;
    width: 100%;
    box-sizing: border-box;
    height: 80rpx;
    align-items: center;
}
.tab-bar view {
    color: #ffffff;
    padding: 0 15rpx;
    height: 60rpx;
    font-size: 30rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
}
.tab-bar .tab-bar-active {
    font-size: 34rpx;
    font-weight: bold;
}
.tab-bar .active-line {
    position: absolute;
    background: #ffffff;
    height: 5rpx;
    width: 50rpx;
    bottom: -10rpx;
}

.banner {
    font-size: 28rpx;
    padding: 27rpx 0;
    display: flex;
    width: 100%;
    color: #f1f1f1;
    align-items: center;
    justify-content: center;
}

.status-bar {
    padding: 10rpx 35rpx;
    display: flex;
    font-size: 30rpx;
    color: #666666;
    justify-content: space-between; 
}
.status-active {
    font-weight: bold;
    color: #000000;
}

.content-view {
    display: flex;
    height: 71vh;
}
.order-list {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.script-view {
    display: flex;
    flex-wrap: wrap;
    padding: 0 4%;
    box-sizing: border-box;
    justify-content: space-between;
}
.script-view view {
    width: 48%;
    height: 400rpx;
    background-color: cornflowerblue;
    margin-top: 15rpx;
    border-radius: 14rpx;
    box-shadow: 2rpx 2rpx 14rpx #636363;
}
.script-view view:nth-child(2n) {
    margin-left: 2%;
}
.footer-bar {
    padding: 30rpx 0;
    display: flex;
    align-items: center;
    justify-content: center;
}