/* pages/shop/index.wxss */
.container {
    height: 100vh;
}
.active {
    background-image: linear-gradient(#8469FF, #6266FF);
    color: #ffffff;
    padding: 0 30rpx;
    box-sizing: border-box;
    display: flex;
    justify-content: center;
    align-items: flex-end;
}
.header {
    background-image: linear-gradient(#6266FF, #4562FF);
    height: 163rpx;
    width: 119%;
    align-items: center;
    display: flex;
    padding-bottom: 75rpx;
    box-sizing: border-box;
    justify-content: center;
    font-size: 28rpx;
    color: #ffffff;
    border-bottom-left-radius: 86%;
    border-bottom-right-radius: 86%;
    align-self: center;
    position: relative;
}
.content {
    width: 100%;
    display: flex;
    flex-direction: column;
    flex: 1;
    margin-top: -167rpx;
    z-index: 990;
}

.tab-bar {
    padding: 0 15rpx;
    display: flex;
    flex-direction: row;
    width: 100%;
    box-sizing: border-box;
    height: 80rpx;
    align-items: center;
}
.tab-bar view {
    color: #ffffff;
    padding: 0 15rpx;
    height: 60rpx;
    font-size: 30rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
}
.tab-bar .tab-bar-active {
    font-size: 34rpx;
    font-weight: bold;
}
.tab-bar .active-line {
    position: absolute;
    background: #ffffff;
    height: 5rpx;
    width: 50rpx;
    bottom: -10rpx;
}

.banner {
    font-size: 28rpx;
    padding: 27rpx 0;
    display: flex;
    width: 100%;
    color: #f1f1f1;
    align-items: center;
    justify-content: center;
}

.status-bar {
    padding: 10rpx 35rpx;
    display: flex;
    font-size: 30rpx;
    color: #666666;
    justify-content: space-between; 
}
.status-active {
    font-weight: bold;
    color: #000000;
}

.content-view {
    display: flex;
    height: 71vh;
}
.order-list {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.script-view {
    display: flex;
    flex-wrap: wrap;
    padding: 0 4%;
    box-sizing: border-box;
    justify-content: space-between;
}
.script-view .card {
    width: 48%;
    height: 500rpx;
    margin-top: 20rpx;
    border-radius: 14rpx;
    box-shadow: 2rpx 2rpx 14rpx #a3a3a3;
}
.script-view .card:nth-child(2n) {
    margin-left: 4%;
}
.footer-bar {
    padding: 30rpx 0;
    display: flex;
    align-items: center;
    justify-content: center;
}

.card {}
.card-image-view {
    height: 67%;
}
.card-image {
    width: 100%;
    border-top-right-radius: 14rpx;
    border-top-left-radius: 14rpx;
}
.card-banner {
    display: flex;
    flex-direction: column;
    height: 33%;
    padding: 10rpx;
    justify-content: space-between;
    box-sizing: border-box;
}
.card-title {
    font-size: 30rpx;
  display: -webkit-box;       
  overflow: hidden;
  -webkit-box-orient: vertical;  
  -webkit-line-clamp: 2;
}
.card-eval {
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.card-price {
    color: red;
    font-weight: bold;
}
.card-view {
    font-size: 28rpx;
    color: #666666
}

.price-view {
    margin: 20rpx;
    background-image: linear-gradient(#4562FF, #8469FF);
    border-radius: 18rpx;
    padding: 20rpx;
    box-sizing: border-box;
}
.price-title {
    color: #ffffff;
    font-weight: bold;
    padding: 0 0 25rpx 0;
}
.banner-card {
    width: 100%;
    display: flex;
    position: relative;
    height: 225rpx;
    margin-top: 35rpx;
    border-radius: 18rpx;
    background: #ffffff;
    justify-content: space-between;
}
.banner-image {
    width: 260rpx;
    height: 260rpx;
    position: absolute;
    bottom: 0;
    left: 0;
    border-radius: 18rpx;
    border-bottom-right-radius: 0;
    border: 8rpx solid #f9ebfd;
    box-sizing: border-box;
    box-shadow: -1rpx 25rpx 40rpx -17rpx #666666;
}
.banner-background {
    width: 260rpx;
}
.banner-content {
    display: flex;
    flex: 1;
    flex-direction: column;
    padding: 20rpx;
    box-sizing: border-box;
    justify-content: space-between;
}
.banner-title {
    font-size: 31rpx;
    display: -webkit-box;       
    overflow: hidden;
    -webkit-box-orient: vertical;  
    -webkit-line-clamp: 2;
}
.banner-btn {
    width: 84%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto;
    background-image: linear-gradient(#4562FF, #8469FF);
    border-radius: 50rpx;
    color: #ffffff;
    font-weight: bold;
    height: 75rpx;
}
.banner-btn view {
    align-items: center;
    justify-content: center;
}
.banner-btn view:first-child {
    color: red;
    background-color: #ffffff;
    height: 84%;
    font-size: 30rpx;
    display: flex;
    width: 40%;
    border-top-left-radius: 50rpx;
    border-bottom-left-radius: 50rpx;
}
.banner-btn view:last-child {
    height: 84%;
    display: flex;
    font-size: 32rpx;
    white-space: nowrap;
    width: 57%;
    border-top-right-radius: 50rpx;
    border-bottom-right-radius: 50rpx;
}