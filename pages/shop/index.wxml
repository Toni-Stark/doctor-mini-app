<!--pages/shop/index.wxml-->
<view class="container">
    <view class="active" style="height:{{height}}px;padding-bottom: {{navTop}}px;">
        便捷购物
    </view>
    <view class="header"></view>
    <view class="content">
        <view class="tab-bar">
            <view wx:for="{{tabList}}" data-index="{{index}}" class="{{tabActive===index?'tab-bar-active':''}}" catchtap="checkTab">
                {{item.title}}
                <view class="active-line" style="display: {{tabActive===index?'block':'none'}};"></view>
            </view>
        </view>
        <view class="banner">- 全部商品 -</view>
        <view class="status-bar">
            <view wx:for="{{statusList}}" data-index="{{index}}" class="{{tabStatus===index?'status-active':''}}" catchtap="checkTabStatus">{{item.title}}</view>
        </view>
        <view class="content-view">
            <scroll-view   
                class="order-list"
                refresher-triggered="{{refresh}}" 
                refresher-enabled 
                lower-threshold="20" 
                bindrefresherrefresh="brashData" 
                bindscrolltolower="addDataList" 
                scroll-y="true">
                <view class="script-view">
                    <view class="card" wx:for="{{cardList}}" wx:key="index" data-id="{{item.price}}" catchtap="naviToWeb">
                        <view class="card-image-view">
                            <image class="card-image" mode="widthFix" src="{{item.url}}"></image>
                        </view>
                        <view class="card-banner">
                            <view class="card-title">{{item.title}}</view>
                            <view class="card-eval">
                                <view class="card-price">￥{{item.price}}</view>
                                <view class="card-view">{{item.num}}人付款</view>
                            </view>
                        </view>
                    </view>
                    <view></view>
                    <view></view>
                    <view></view>
                    <view></view>
                </view>
                <view class="footer-bar"> ~ 到底了 ~ </view>
            </scroll-view>
        </view>
    </view>

</view>
