/* pages/index/recommend/index.wxss */

.banner {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-self: center;
    padding: 0 30rpx;
    border-top: 1rpx solid #e2e2e2;
    box-sizing: border-box;
}
.banner-title {
    font-size: 38rpx;
    font-weight: bold;
    padding-bottom: 25rpx;
}
.banner-list {
    display: flex;
    width: 100%;
    justify-content: space-between;
}
.banner-item {
    display: flex;
    width: 100%;
    flex-direction: column;
    position: relative;
}
.banner-list .banner-item:not(:first-child) {
    margin-left: 20rpx;
}
.banner-image {
    width: 100%;
}
.banner-absou {
    position: absolute;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
.banner-image-eval {
    width: 45rpx;
    height: 45rpx;
}
.banner-text-eval {
    font-size: 28rpx;
    font-weight: bold;
    color: #ffffff;
    margin-top: 15rpx;
}

.share-list {
    display: flex;
    flex-direction: column;
}
.share-item {
    padding: 35rpx 0;
    display: flex;
    align-items: center;
    border-bottom: 1rpx solid #f2f2f2;
}
.share-point {
    width: 8rpx;
    height: 8rpx;
    border-radius: 50%;
    background-color: #4562FF;
    margin-right: 20rpx;
}
.share-label {
    font-size: 30rpx;
}