.header {
    min-height: 230rpx !important;
    display: flex;
    justify-content: center;
    align-items: flex-end;
    position: relative;
}
.header .header-title {
    position: absolute;
    font-size: 30rpx;
    bottom: 57%;
    left: 22%;
}
.header-rubi {
    width: 119rpx;
    height: 119rpx;
    position: absolute;
    left: 37rpx;
    bottom: 73rpx;
}

.search {
    width: 88%;
    background-color: #ffffff;
    border-radius: 50rpx;
    height: 100rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 32rpx;
    box-sizing: border-box;
    box-shadow: 4rpx 10rpx 40rpx 2rpx rgba(127, 129, 240, 0.51);
    z-index: 800;
}
.search text {
    color: #484B54;
    font-size: 32rpx;
}
.search image{
    width: 60rpx;
    height: 60rpx;
}
.tabbar {
    margin: 40rpx 0;
    padding: 0 30rpx;
}
.tab {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
.tab-image {
    width: 60rpx;
    height: 60rpx;
}
.tab-label {
    margin-top: 10rpx;
    font-size: 26rpx;
    font-weight: bold;
}

.card {
    width: 88%;
    box-shadow: 4rpx 10rpx 40rpx 2rpx rgba(168, 168, 168, 0.51);
    /* display: flex;
    flex-direction: column; */
    margin: 0 auto;
    border-radius: 17rpx;
}
.card-header {
    padding: 24rpx;
    display: flex;
    align-items: center;
    font-size: 32rpx;
    color: #000000;
    border-top-right-radius: 17rpx;
    border-top-left-radius: 17rpx;
    background-image: linear-gradient(90deg,#EEF2FF, #EEE1FF);
}
.card-img {
    width: 40rpx;
    height: 40rpx;
    margin-right: 10rpx;
}
.card-tip-list {
    display: flex;
    width: 100%;
    padding: 15rpx;
    box-sizing: border-box;
    flex-wrap: wrap;
    overflow: inherit;
    /* min-height: 200rpx; */
    /* max-height: 200rpx; */
}
.card-tip-item {
    padding: 15rpx 35rpx;
    border-radius: 50rpx;
    background-color: #F4F6FF;
    font-size: 30rpx;
    white-space: nowrap;
    margin: 10rpx 20rpx;
}
.banner {
    width: 88%;
    display: flex;
    flex-direction: column;
    align-self: center;
    padding: 60rpx 0;
    margin: 0 auto;
}
.banner-title {
    font-size: 38rpx;
    font-weight: bold;
    padding-bottom: 25rpx;
}
.banner-list {
    display: flex;
    width: 100%;
    justify-content: space-between;
}
.banner-item {
    display: flex;
    width: 100%;
    height: 185rpx;
    position: relative;
    align-items: center;
}
.banner-list .banner-item:not(:first-child) {
    margin-left: 20rpx;
}
.banner-image {
    width: 100%;
    height: 185rpx;
}
.banner-absou {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
.banner-image-eval {
    width: 45rpx;
    height: 45rpx;
}
.banner-text-eval {
    font-size: 28rpx;
    font-weight: bold;
    color: #ffffff;
    margin-top: 15rpx;
}
.share {
    padding: 0 0 40rpx;
}
.share-title {
    font-size: 38rpx;
    font-weight: bold;
}
.share-list {
    display: flex;
    flex-direction: column;
}
.share-item {
    padding: 35rpx 0;
    display: flex;
    align-items: center;
    border-bottom: 1rpx solid #f2f2f2;
}
.share-point {
    width: 8rpx;
    height: 8rpx;
    border-radius: 50%;
    background-color: #4562FF;
    margin-right: 10rpx;
}
.share-label {
    font-size: 30rpx;
}
.content {
    flex: 1;
    /* display: flex; */
    /* text-align: center; */
    /* flex-direction: column; */
    border-top: 1rpx solid #f2f2f2;
    overflow-y: scroll;
}
.container-index {
    height: 100vh;
    overflow: hidden;
    display: flex;
    flex-direction: column;
}